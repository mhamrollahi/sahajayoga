  <div class="row mbn-30">
    <!-- Revenue Statistics Chart Start -->
    <div class="col-md-12 mb-30">
      <div class="box">
        <div class="box-head">
          <div class="row">
            <h4 class="title">لیست تمامی خاطرات و تجربیات</h4>
          </div>
        </div>
        <div class="box-body table-responsive">
          <table
            class="table table table-striped table-hover table-bordered mb-0"
          >
            <!-- Table Head Start -->
            <thead>
              <tr class="table-primary d-flex">
                <th class="col-md-1">ردیف</th>
                <th class="col-md-2">نام و نام خانوادگی </th>
                <th class="col-md-2">عنوان خاطره / تجربه</th>
                <th class="col-md-4">متن</th>
                <th class="col-md-1">ایمیل</th>
                <th class="col-md-1">فعال/غیر‌فعال</th>
                <th class="text-center col-md-1">عملیات</th>
              </tr>
            </thead>
            <!-- Table Head End -->

            <!-- Table Body Start -->
            <tbody>
              {{#each allExperiences}}
                <tr class="d-flex">
                  <td class="col-md-1">{{this.id}}</td>
                  <td class="td-table col-md-2">{{this.fullName}}</td>
                  <td class="td-table col-md-2"><a href="###">{{this.Title}}</a></td>
                  <td class="td-table col-md-4">{{this.Description}}</td>
                  <td class="col-md-1 td-table">{{this.Email}}</td>
                  <td class="col-md-1 text-center">{{#if this.isActive}} 
                    <a  class="btn btn-success btn-sm"  href="/experience/active/{{this.id}}&{{this.isActive}}" title='کلیک کنید غیر فعال می‌شود.'>فعال</a> 
                    {{else}} <a  class="btn btn-danger btn-sm" href="/experience/active/{{this.id}}&{{this.isActive}}" title='کلیک کنید فعال می‌شود.'>غیرفعال</a>{{/if}} </td>
                  <td class="text-center col-md-1">
                    <div class="table-action-buttons">
                      <a class="edit button button-box button-xs button-info" href="#"  title="اصلاح خاطره..." ><i class="zmdi zmdi-edit"></i></a>
                      <a class="delete button button-box button-xs button-danger" id="btnDelete" href="/experience/delete/{{this.id}}" 
                        onclick="return confirm('آیا از عملیات حذف مطمين هستید؟');"   title="حذف خاطره ..." ><i class="zmdi zmdi-delete"></i></a>
                    </div>
                  </td>
                </tr>
              {{/each}}
            </tbody>
            <!-- Table Body End -->
          </table>
        </div>
      </div>
    </div>
    <!-- Revenue Statistics Chart End -->
  </div>

</div>
